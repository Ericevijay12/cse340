<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', { title: 'Home' }) %>
<body>
  <div id="wrapper">
    <%- include('./partials/header') %>
    <%- include('./partials/nav', { activePage: '/', navLinks: navLinks }) %>
    
    <main>
      <h1>Welcome to CSE Motors</h1>
      
      <section class="hero">
        <div class="hero-content">
          <h2>DMC Delorean</h2>
          <p>3 Cup holders</p>
          <p>Superman doors</p>
          <p>Fuzzy dice!</p>
          <a href="/vehicles/delorean" class="btn btn-accent">Own Today</a>
        </div>
        <div class="hero-image-container">
          <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean" class="hero-image">
        </div>
      </section>
      
      <div class="content-wrapper">
        <section class="reviews">
          <h2>DMC Delorean Reviews</h2>
          <ul>
            <% reviews.forEach(review => { %>
              <li>"<%= review.text %>" (<%= review.rating %>)</li>
            <% }) %>
          </ul>
        </section>
        
        <section class="upgrades">
          <h2>Delorean Upgrades</h2>
          <div class="upgrade-grid">
            <% upgrades.forEach(upgrade => { %>
              <div class="upgrade-item">
                <img src="/images/upgrades/<%= upgrade.imgSrc %>" alt="<%= upgrade.name %>">
                <a href="/upgrades/<%= upgrade.id %>"><%= upgrade.name %></a>
              </div>
            <% }) %>
          </div>
        </section>
      </div>
    </main>
    
    <%- include('./partials/footer', { lastUpdate: '05/14/2025' }) %>
  </div>
  
  <!-- Add scroll-to-top button -->
  <div class="scroll-top" id="scrollTop" title="Scroll to top">
    <span class="sr-only">Scroll to top</span>
  </div>
</body>
</html>
